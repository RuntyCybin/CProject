{% extends 'base.html.twig' %}

{% block body %}
    <h1>Post list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>User_name</th>
                <th>User_category</th>
                <th>User_created</th>
                <th>User_age</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.username }}</td>
                <td>{{ post.usercategory }}</td>
                <td>{% if post.usercreated %}{{ post.usercreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ post.userage }}</td>
                <td>{% if post.updated %}{{ post.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('_show', { 'id': post.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('_edit', { 'id': post.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
